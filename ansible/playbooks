setting up key in hosts file
[centos]
centos apache_package=httpd

[centos:vars]
ansible_ssh_private_key_file=~/ansible_key

[ubuntu]
ubuntu apache_package=apache2

[ubuntu:vars]
ansible_ssh_private_key_file=~/ansible_key
============================================================================================================================================================================================================================================================
list ansible inventory
ansible-inventory --list

============================================================================================================================================================================================================================================================
tasks.yml
- name: example
  command: touch /home/dmgcp22/{{nm}}

- name: date
  command: date

variables.yml
nm: abc

playbook.yml
---
- name: var
  hosts: all
  become: true
  vars_files:
    - variables.yml
  tasks:
    - include: task.yml
============================================================================================================================================================================================================================================================
async.yml
- name: print date
  hosts: all
  
  tasks:
  - name: sleep
    command: sleep 60
    async: 70
    poll: 35
  - name: print dt
    command: date


